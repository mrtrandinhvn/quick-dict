{
  "name": "quick-dict",
  "version": "1.1.7",
  "description": "A chrome extension that allows user to quickly search for a word in his favor dictionary website",
  "repository": {
    "git": ""
  },
  "scripts": {
    "sync-version": "node sync-version.js",
    "clean": "node -e \"require('fs').rmSync('built', {recursive: true, force: true})\"",
    "build:js": "esbuild src/browser_action/scripts/index.ts src/content_scripts/scripts/index.ts --bundle --outdir=built --outbase=src --minify --sourcemap --target=es2020",
    "build:css": "sass src/browser_action/scss/index.scss built/browser_action/css/index.css && sass src/content_scripts/scss/index.scss built/content_scripts/css/index.css",
    "prebuild": "npm run sync-version",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "dev:js": "esbuild src/browser_action/scripts/index.ts src/content_scripts/scripts/index.ts --bundle --outdir=built --outbase=src --sourcemap --target=es2020 --watch",
    "dev:css": "sass src/browser_action/scss:built/browser_action/css src/content_scripts/scss:built/content_scripts/css --watch",
    "dev": "npm run dev:js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "version": "npm run sync-version && git add manifest.json"
  },
  "author": "mrtrandinhvn@gmail.com",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "@types/deep-freeze": "^0.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "deep-freeze": "^0.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sass": "^1.83.4",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
