{
    "compilerOptions": {
        "outDir": "./built",
        "rootDir": "./src",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es2020",
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}