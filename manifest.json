{
    "name": "Quick Dictionary - Từ điển nhanh",
    "version": "1.1.7",
    "description": "Giúp bạn tra cứu nhanh từ ngữ trên các trang từ điển yêu thích.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "css": [
                "./built/content_scripts/css/index.css"
            ],
            "js": [
                "./built/content_scripts/scripts/index.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon64.png"
        },
        "default_popup": "src/browser_action/index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "resources/images/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "manifest_version": 3,
    "author": "mrtrandinhvn@gmail.com"
}
